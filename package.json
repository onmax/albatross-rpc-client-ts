{
  "name": "nimiq-rpc-client-ts",
  "type": "module",
  "version": "1.0.0-beta.31",
  "packageManager": "pnpm@10.15.0",
  "description": "A Nimiq RPC client for TypeScript",
  "author": "onmax",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/albatross-rpc-client-ts.git"
  },
  "keywords": [
    "nimiq",
    "albatross",
    "rpc",
    "client",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    "./http": {
      "types": "./dist/http.d.mts",
      "import": "./dist/http.mjs",
      "require": "./dist/http.cjs"
    },
    "./ws": {
      "types": "./dist/ws.d.mts",
      "import": "./dist/ws.mjs",
      "require": "./dist/ws.cjs"
    },
    "./types": {
      "types": "./dist/types.d.mts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.cjs"
    },
    "./client": {
      "types": "./dist/client.d.mts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "test": "vitest run",
    "build": "unbuild",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "ci": "pnpm lint && pnpm build",
    "release": "pnpm lint && pnpm typecheck && pnpm build && bumpp --commit --push --tag && pnpm publish --tag beta && jsr publish"
  },
  "dependencies": {
    "isomorphic-ws": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "catalog:",
    "@types/ws": "catalog:",
    "bumpp": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "jsr": "catalog:",
    "lint-staged": "catalog:",
    "pkg-pr-new": "catalog:",
    "simple-git": "catalog:",
    "simple-git-hooks": "catalog:",
    "tinyexec": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "catalog:",
    "vitest-package-exports": "catalog:",
    "yaml": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
