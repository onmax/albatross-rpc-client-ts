{
  "name": "nimiq-rpc-client-ts",
  "type": "module",
  "version": "1.0.0-beta.17",
  "packageManager": "pnpm@10.4.0",
  "description": "A Nimiq RPC client for TypeScript",
  "author": "onmax",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/albatross-rpc-client-ts.git"
  },
  "keywords": [
    "nimiq",
    "albatross",
    "rpc",
    "client",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    "./http": {
      "types": "./dist/http.d.mts",
      "import": "./dist/http.mjs"
    },
    "./types": {
      "types": "./dist/types.d.mts",
      "import": "./dist/types.mjs"
    },
    "./config": {
      "types": "./dist/config.d.mts",
      "import": "./dist/config.mjs"
    }
  },
  "types": "./dist/types.d.mts",
  "files": ["dist"],
  "scripts": {
    "dev": "unbuild --stub",
    "test": "vitest run",
    "build": "unbuild",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "ci": "pnpm lint && pnpm build",
    "release": "pnpm lint && pnpm typecheck && pnpm build && bumpp --commit --push --tag && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.0",
    "@changesets/cli": "^2.27.12",
    "@types/ws": "^8.5.14",
    "bumpp": "^10.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "lint-staged": "^15.4.3",
    "pkg-pr-new": "^0.0.39",
    "simple-git": "^3.27.0",
    "simple-git-hooks": "^2.11.1",
    "tinyexec": "^1.0.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vitest": "^3.0.5",
    "vitest-package-exports": "^0.1.1",
    "yaml": "^2.7.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
