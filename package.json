{
  "name": "nimiq-rpc-client-ts",
  "type": "module",
  "version": "0.2.0",
  "private": false,
  "description": "A Nimiq RPC client for TypeScript",
  "author": "onmax",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "test": "vitest run",
    "build": "unbuild src/index.ts --format esm --dts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "ci": "pnpm lint && pnpm build",
    "release": "pnpm lint && pnpm build && changeset publish"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.0",
    "@changesets/cli": "^2.26.2",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "^18.18.8",
    "@types/ws": "^8.5.8",
    "add": "^2.0.6",
    "eslint": "^8.53.0",
    "lint-staged": "^15.0.2",
    "simple-git": "^3.20.0",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "unbuild": "^2.0.0",
    "vite": "^4.5.0",
    "vitest": "^0.29.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
